<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#ffffff">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/name_linear_layout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_iam"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginBottom="4sp"
                    android:layout_marginLeft="16sp"
                    android:textColor="#202124" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/datetime" android:layout_marginRight="16dp"
                    android:layout_gravity="center" android:textColor="#5f6368"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/github_linear_layout"
                android:layout_marginBottom="8dp">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/github_image"
                    app:srcCompat="@drawable/github"
                    android:layout_marginLeft="16sp"
                    android:layout_gravity="center"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_github"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="16sp"
                    android:layout_weight="1"
                    android:textColor="#5f6368" android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twitter_linear_layout"
                android:layout_marginBottom="8dp">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/twitter"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/twitter_image"
                    app:srcCompat="@drawable/twitter"
                    android:layout_marginLeft="16sp"
                    android:layout_gravity="center"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_twitter"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="16sp"
                    android:layout_weight="1"
                    android:textColor="#5f6368" android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>