<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_iam"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginLeft="8sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/github_image"
                app:srcCompat="@drawable/github"
                android:layout_marginLeft="8sp" android:layout_gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_github"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="8sp"
                android:layout_weight="1"/>
        <Button
                android:text="ブラウザで見る"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_github"
                android:layout_marginRight="8sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8sp">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/twitter"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/twitter_image"
                app:srcCompat="@drawable/twitter" android:layout_marginLeft="8sp" android:layout_gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_twitter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="8sp"
                android:layout_weight="1"/>
        <Button
                android:text="アプリで見る"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_twitter" android:layout_marginRight="8sp"/>
    </LinearLayout>
</LinearLayout>